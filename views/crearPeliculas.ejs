<%- include('./partials/header') %>
<h1 class="title">Crear película</h1>

<% function buscarError(name){
    if(typeof errors != 'undefined'){
        let error = errors.filter(function(error){
            return error.param == name;
        });
        if(error.length == 0){
            let error = [{
                value: '',
                msg: '',
                param: '',
                location: ''
            }
            ];
            return error;
        }
        return error;
    }else{
        let error = [{
            value: '',
            msg: '',
            param: '',
            location: ''
        }
        ];
        return error;
    }
}
%>

<form class="form" action="/peliculas/crear" method="POST">
    <div>
        <label for="">Titulo de la película</label>
        <input type="text" name="titulo" value="<%= (typeof datos != 'undefined') ? datos.titulo : ''  %>">
        <span style="color: red;font-size: 12px;"><%= buscarError('titulo')[0].msg %></span>
    </div>
    <div>
        <label for="">Premios</label>
        <input type="text" name="premios" value="<%= (typeof datos != 'undefined') ? datos.premios : ''  %>">
        <span style="color: red;font-size: 12px;"><%= buscarError('premios')[0].msg %></span>
    </div>
    <div>
        <label for="">Duración</label>
        <input type="text" name="duracion" value="<%= (typeof datos != 'undefined') ? datos.duracion : ''  %>">
        <span style="color: red;font-size: 12px;"><%= buscarError('duracion')[0].msg %></span>
    </div>
    <div>
        <label for="">Rating</label>
        <input type="text" name="rating" value="<%= (typeof datos != 'undefined') ? datos.rating : ''  %>">
        <span style="color: red;font-size: 12px;"><%= buscarError('rating')[0].msg %></span>
    </div>
    <div>
        <label for="">Fecha de estreno</label>
        <input type="date" name="fecha_estreno" value="<%= (typeof datos != 'undefined') ? datos.fecha_estreno : ''  %>">
        <span style="color: red;font-size: 12px;"><%= buscarError('fecha_estreno')[0].msg %></span>
    </div>
    <div>
        <label for="">Genero</label>
        <select name="genero" required>
            <%for(let i = 0; i < generos.length; i++){%>
                <option value="<%=generos[i].id%>">
                    <%=generos[i].name%>
                </option>
                <% } %>
            </select>
        </div>
        <button style="margin: 0;" type="submit">Crear</button>
    </form>
    <%- include('./partials/footer') %>
    